    "Clean",
    "architecture",
    "Test",
    "Driven",
    "Development",
    "RESTful",
    "REST",
    "HTTP"
  ],
  "author": "Gabriel Moura",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/elmoura/clean-node-api/issues"
  },
  "homepage": "https://github.com/elmoura/clean-node-api#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}