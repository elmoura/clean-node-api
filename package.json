{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Clean architecture based NodeJS API - developed using TDD",
  "main": "index.js",
  "standard": {
    "env": [
      "jest"
    ]
  },
  "scripts": {
    "test": "jest --silent --colors --passWithNoTests --noStackTrace",
